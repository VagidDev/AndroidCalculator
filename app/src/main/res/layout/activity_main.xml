<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="151dp"
        android:layout_marginEnd="27dp"
        android:fontFamily="@font/poppins_regular"
        android:textColor="@color/equationText"
        android:text="6000/2+3227*2"
        android:textSize="26sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="HardcodedText" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="7dp"
        android:layout_marginEnd="27dp"
        android:fontFamily="@font/poppins_medium"
        android:text="=12,454"
        android:textColor="@color/resultText"

        android:textSize="52sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView"
        tools:ignore="HardcodedText" />

    <GridLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:columnCount="4"
        android:rowCount="6"

        android:layout_marginStart="37dp"
        android:layout_marginBottom="44dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent" >

        <android.widget.Button
            android:layout_row="5"
            android:layout_column="0"
            android:layout_columnSpan="2"
            android:layout_width="158dp"
            android:layout_height="65dp"
            android:text="0"
            style="@style/TextAppearance.AppCompat.NumPadStyle"
            />
        <android.widget.Button
            android:text="."
            android:layout_row="5"
            android:layout_column="2"
            style="@style/TextAppearance.AppCompat.NumPadStyle"
            />
        <android.widget.Button
            android:text="1"
            android:layout_row="4"
            android:layout_column="0"
            style="@style/TextAppearance.AppCompat.NumPadStyle"
            />
        <android.widget.Button
            android:text="2"
            android:layout_row="4"
            android:layout_column="1"
            style="@style/TextAppearance.AppCompat.NumPadStyle"
            />
        <android.widget.Button
            android:text="3"
            android:layout_row="4"
            android:layout_column="2"
            style="@style/TextAppearance.AppCompat.NumPadStyle"
            />
        <android.widget.Button
            android:text="4"
            android:layout_row="3"
            android:layout_column="0"
            style="@style/TextAppearance.AppCompat.NumPadStyle"
            />
        <android.widget.Button
            android:text="5"
            android:layout_row="3"
            android:layout_column="1"
            style="@style/TextAppearance.AppCompat.NumPadStyle"
            />
        <android.widget.Button
            android:text="6"
            android:layout_row="3"
            android:layout_column="2"
            style="@style/TextAppearance.AppCompat.NumPadStyle"
            />
        <android.widget.Button
            android:text="7"
            android:layout_row="2"
            android:layout_column="0"
            style="@style/TextAppearance.AppCompat.NumPadStyle"
            />
        <android.widget.Button
            android:text="8"
            android:layout_row="2"
            android:layout_column="1"
            style="@style/TextAppearance.AppCompat.NumPadStyle"
            />
        <android.widget.Button
            android:text="9"
            android:layout_row="2"
            android:layout_column="2"
            style="@style/TextAppearance.AppCompat.NumPadStyle"
            />

        <android.widget.Button
            android:text="Ac"
            android:layout_row="1"
            android:layout_column="0"
            style="@style/TextAppearance.AppCompat.NumPadStyle"
            android:textColor="@color/clearButton"
            />
        <android.widget.Button
            android:text="D"
            android:layout_row="1"
            android:layout_column="1"
            style="@style/TextAppearance.AppCompat.NumPadStyle"
            />

        <android.widget.Button
            android:text="/"
            android:layout_row="1"
            android:layout_column="2"
            style="@style/TextAppearance.AppCompat.NumPadStyle.OperationButtons"
            />
        <android.widget.Button
            android:text="*"
            android:layout_row="1"
            android:layout_column="3"
            style="@style/TextAppearance.AppCompat.NumPadStyle.OperationButtons"
            />

        <android.widget.Button
            android:text="-"
            android:layout_row="2"
            android:layout_column="3"
            style="@style/TextAppearance.AppCompat.NumPadStyle.OperationButtons"
            />

        <GridLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_row="3"
            android:layout_column="3"
            android:layout_rowSpan="3"
            android:columnCount="1"
            android:rowCount="2"
            >
            <android.widget.Button
                android:text="+"
                android:layout_row="0"
                android:layout_column="0"
                style="@style/TextAppearance.AppCompat.NumPadStyle.OperationButtons.BigButtons" />
            <android.widget.Button
                android:text="="
                android:layout_row="1"
                android:layout_column="0"
                style="@style/TextAppearance.AppCompat.NumPadStyle.OperationButtons.BigButtons"
                android:textColor="@color/equalsButton"
                android:background="@drawable/shape_rounded_numpad_equals"
                />
        </GridLayout>

    </GridLayout>

</androidx.constraintlayout.widget.ConstraintLayout>